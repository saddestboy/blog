.post {
  table {
    border-collapse: collapse;
    border-spacing: 0;

    td, th {
      padding: .375rem .8rem;
      border: .1rem solid #dfe2e5;
    }
  }
  
  blockquote {
    margin-left: 1.5rem;
    color: #777;
    border-left: 4px solid #f77;
    
    p {
      margin-left: 1.5rem;
    }
  }
  
  a {
    border-bottom: 2px solid #f77;
    color: #111;
    
    &:hover {
      border-bottom: 2px solid #111;
    }
  }

  p {
    margin: 1.5rem auto;
    max-width: 85%;
    font-size: 1.15rem;
    font-weight: 300;
    
    img {
      max-width: 100%;
    }
    
    code {
      background-color: #fff;
      font-family: inherit;
    }
  }
  
  h1, h2, h3, h4{
    margin-top: 1.5rem;
    margin-bottom: 1.5rem;
    color: #f77;
    font-weight: 400;
    padding: 0 1.5rem;
  }
  
  h1 {
    font-size: 2em;
  }

  h2 {
    font-size: 1.6em;
  }

  h3 {
    font-size: 1.2em;
  }
  
  h4 {
    font-size: 1.1em;
  }
  
  .post-meta {
    padding: 0 1.5rem;
  }
  
  ol,ul {
    max-width: 90%;
    margin: 0 auto;
    padding-left: 3rem;
    font-weight: 300;
        
    li {
      margin: 1.5rem 1.5rem 1.5rem .5rem;
      code {
        background-color: #fff;
        font-family: inherit;
      }
      
      p {
        margin: 0;
        code {
          background-color: #fff;
          font-family: inherit;
        }
      }
    }
  }
  
  figure {
    background: #fff; */
    margin-bottom: 1.5rem;
    
    td, th {
      padding: 0;
      border: none;
    }
    
    .gutter {
      display: none;
    }
    
    pre {
      font-family: inherit;
      font-size: 1.15rem;
      padding: 1.5rem;
      white-space: pre-wrap;
      word-break: break-word;
      
      .string {
        color: #f77;
      }
    }
  }
  
  .post-tag-list {
    padding-left: 1.5rem;
    margin: 0;
    font-size: 1.1rem;
    font-weight: 400;

    li {
      list-style: none;
      display: inline-block;
      margin: 0
      margin-right: 1rem;
      
      &::before {
        content: '#';
      }
    }
  }
  
  .post-footer {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 2rem;
    
    .arrow-top {
      width: 2rem;
      height: 2rem;
      font-size: 1.5rem;
      color: #f77;
      margin-right: 1.5rem;
      text-align: center;
      cursor: pointer;
      
      &:hover {
        color: #111;
      }
    }
  }
}
